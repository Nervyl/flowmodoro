{
    "manifest_version": 2,
    "name": "Flowmodoro",
    "version": "1.0.0",
    "description": "A dynamic timer application optimized for productivity.",
    "permissions": ["storage", "notifications"],
    "background": {
        "scripts": ["assets/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "128": "icons/icon-pause.png"
        },
        "default_title": "Flowmodoro",
        "default_popup": "index.html"
    },
    "icons": {
        "128": "icons/icon-pause.png"
    }
}
